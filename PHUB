<body>

    <div class="container">
        <h1>‚ú® Prompt Manager ‚ú®</h1>
        
        <section>
            <h2>‚ûï Th√™m Prompt M·ªõi</h2>
            <form id="add-prompt-form">
                <input type="text" id="prompt-name" placeholder="T√™n Prompt (v√≠ d·ª•: Vi·∫øt Email Chuy√™n Nghi·ªáp)" required>
                
                <textarea id="prompt-content" rows="4" placeholder="N·ªôi dung Prompt..." required></textarea>
                
                <select id="prompt-category">
                    <option value="Chung">Chung</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Code">Code</option>
                    <option value="Vi·∫øt l√°ch">Vi·∫øt l√°ch</option>
                    <option value="√ù t∆∞·ªüng">√ù t∆∞·ªüng</option>
                </select>
                
                <button type="submit">L∆∞u Prompt</button>
            </form>
        </section>

        <hr>

        <section>
            <div class="prompt-list-header">
                <h2>üìö Danh s√°ch Prompt</h2>
                <div class="filter-controls">
                    <label for="filter-category">L·ªçc theo m·ª•c ƒë√≠ch:</label>
                    <select id="filter-category" onchange="displayPrompts()">
                        <option value="T·∫•t c·∫£">T·∫•t c·∫£</option>
                        </select>
                </div>
            </div>
            
            <ul id="prompt-list">
                </ul>
        </section>
    </div>

    <script>
        // Khai b√°o bi·∫øn
        const form = document.getElementById('add-prompt-form');
        const promptList = document.getElementById('prompt-list');
        const filterSelect = document.getElementById('filter-category');

        // L·∫•y d·ªØ li·ªáu t·ª´ Local Storage ho·∫∑c kh·ªüi t·∫°o m·∫£ng r·ªóng
        let prompts = JSON.parse(localStorage.getItem('prompts')) || [];

        // --- CH·ª®C NƒÇNG L∆ØU D·ªÆ LI·ªÜU ---
        function savePrompts() {
            localStorage.setItem('prompts', JSON.stringify(prompts));
        }

        // --- CH·ª®C NƒÇNG L·ªåC V√Ä HI·ªÇN TH·ªä C√ÅC M·ª§C DANH M·ª§C (CATEGORY) ---
        function populateCategories() {
            // L·∫•y ra t·∫•t c·∫£ c√°c danh m·ª•c ƒë·ªôc nh·∫•t
            const categories = new Set(prompts.map(p => p.category));
            
            // X√≥a c√°c option c≈© (tr·ª´ "T·∫•t c·∫£")
            filterSelect.innerHTML = '<option value="T·∫•t c·∫£">T·∫•t c·∫£</option>';
            
            // Th√™m c√°c danh m·ª•c m·ªõi v√†o dropdown l·ªçc
            categories.forEach(cat => {
                const option = document.createElement('option');
                option.value = cat;
                option.textContent = cat;
                filterSelect.appendChild(option);
            });

            // ƒê·ªìng b·ªô category option trong form
            const formCategorySelect = document.getElementById('prompt-category');
            // L∆∞u gi·ªØ c√°c category m·∫∑c ƒë·ªãnh ƒë·ªÉ kh√¥ng b·ªã m·∫•t khi x√≥a h·∫øt prompt
            const defaultCategories = ["Chung", "Marketing", "Code", "Vi·∫øt l√°ch", "√ù t∆∞·ªüng"];
            
            // X√≥a c√°c option c≈© (tr·ª´ m·∫∑c ƒë·ªãnh)
            formCategorySelect.innerHTML = ''; 
            
            // G·ªôp v√† lo·∫°i b·ªè tr√πng l·∫∑p
            const allCategories = new Set([...defaultCategories, ...categories]);

            allCategories.forEach(cat => {
                const option = document.createElement('option');
                option.value = cat;
                option.textContent = cat;
                formCategorySelect.appendChild(option);
            });
        }

        // --- CH·ª®C NƒÇNG HI·ªÇN TH·ªä PROMPT ---
        function displayPrompts() {
            promptList.innerHTML = ''; // X√≥a danh s√°ch c≈©
            const selectedCategory = filterSelect.value;
            
            // L·ªçc danh s√°ch prompts
            const filteredPrompts = prompts.filter(p => 
                selectedCategory === 'T·∫•t c·∫£' || p.category === selectedCategory
            );

            // T·∫°o v√† ch√®n c√°c item prompt
            if (filteredPrompts.length === 0) {
                promptList.innerHTML = '<li style="text-align: center; color: gray;">Ch∆∞a c√≥ Prompt n√†o trong m·ª•c n√†y.</li>';
                return;
            }

            filteredPrompts.forEach((prompt, index) => {
                const listItem = document.createElement('li');
                listItem.className = 'prompt-item';
                // S·ª≠ d·ª•ng data-index ƒë·ªÉ x√°c ƒë·ªãnh prompt khi x√≥a
                listItem.dataset.id = prompt.id; 

                listItem.innerHTML = `
                    <h3>${prompt.name}</h3>
                    <div class="prompt-meta">
                        M·ª•c ƒë√≠ch: <strong>${prompt.category}</strong>
                    </div>
                    <p>${prompt.content}</p>
                    <div class="prompt-actions">
                        <button class="copy-btn" onclick="copyPromptContent('${prompt.id}')">üìã Sao ch√©p</button>
                        <button class="delete-btn" onclick="deletePrompt('${prompt.id}')">üóëÔ∏è X√≥a</button>
                    </div>
                `;
                promptList.appendChild(listItem);
            });
            
            populateCategories(); // C·∫≠p nh·∫≠t l·∫°i danh m·ª•c sau khi hi·ªÉn th·ªã/l·ªçc
        }

        // --- CH·ª®C NƒÇNG TH√äM PROMPT M·ªöI ---
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const name = document.getElementById('prompt-name').value;
            const content = document.getElementById('prompt-content').value;
            const category = document.getElementById('prompt-category').value;
            
            const newPrompt = {
                id: Date.now().toString(), // ID ƒë·ªôc nh·∫•t
                name: name,
                content: content,
                category: category
            };

            prompts.unshift(newPrompt); // Th√™m v√†o ƒë·∫ßu danh s√°ch
            savePrompts();
            displayPrompts(); // C·∫≠p nh·∫≠t hi·ªÉn th·ªã
            form.reset(); // X√≥a form
            alert('ƒê√£ th√™m Prompt th√†nh c√¥ng!');
        });

        // --- CH·ª®C NƒÇNG SAO CH√âP PROMPT ---
        function copyPromptContent(id) {
            const prompt = prompts.find(p => p.id === id);
            if (prompt) {
                navigator.clipboard.writeText(prompt.content)
                    .then(() => {
                        alert('ƒê√£ sao ch√©p n·ªôi dung Prompt v√†o clipboard!');
                    })
                    .catch(err => {
                        console.error('L·ªói khi sao ch√©p: ', err);
                        alert('L·ªói! Vui l√≤ng sao ch√©p th·ªß c√¥ng.');
                    });
            }
        }

        // --- CH·ª®C NƒÇNG X√ìA PROMPT ---
        function deletePrompt(id) {
            if (confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a Prompt n√†y kh√¥ng?')) {
                // L·ªçc b·ªè prompt c√≥ id t∆∞∆°ng ·ª©ng
                prompts = prompts.filter(p => p.id !== id);
                savePrompts();
                displayPrompts(); // C·∫≠p nh·∫≠t hi·ªÉn th·ªã
                alert('ƒê√£ x√≥a Prompt.');
            }
        }

        // Kh·ªüi t·∫°o trang khi t·∫£i
        displayPrompts(); 
    </script>

</body>
